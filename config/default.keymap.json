[
  {
    "context": "sandbox",
    "commands": [
      {"keys": ["command+shift+i"],   "command": "sayHello", "args": ["World!"]}
    ]
  },
  {
    "context": "sandbox.editor",
    "commands": [
      {"keys": ["alt+i"],               "command": "insertImage" }
    ]
  },
  // {
  //   "context": "sandbox.editor.writer.insertionMode",
  //   "commands": [
  //     {"keys": ["down"],          "command": "toggleNodeInserter" },
  //   ]
  // },
  {
    "context": "sandbox.editor.writer",
    "commands": [
      {"keys": ["backspace"],          "command": "delete", "args": ["left"] },
      {"keys": ["del"],                "command": "delete", "args": ["right"] },
      {"keys": ["enter"],               "command": "modifyNode" },
      {"keys": ["shift+enter"],         "command": "write", "args": ["\n"] },
      {"keys": ["tab"], "command": "write", "args": ["  "] },

      {"keys": ["alt+h"],               "command": "insertNode", "args": ["heading"] },
      {"keys": ["alt+c"],               "command": "insertNode", "args": ["codeblock"] },
      {"keys": ["alt+p"],               "command": "insertNode", "args": ["paragraph"] },

      {"keys": ["command+c"],           "command": "copy", "preventDefault": "false" },
      {"keys": ["command+x"],           "command": "cut" },
      {"keys": ["command+v"],           "command": "paste" },
      {"keys": ["command+i"],           "command": "annotate", "args": ["emphasis"]},
      {"keys": ["command+b"],           "command": "annotate", "args": ["strong"]},
      {"keys": ["command+1"],           "command": "annotate", "args": ["idea"]},
      {"keys": ["command+2"],           "command": "annotate", "args": ["question"]},
      {"keys": ["command+3"],           "command": "annotate", "args": ["error"]},
  
      {"keys": ["right"],               "command": "move", "scope": "selection", "args": ["right", "char"] },
      {"keys": ["left"],                "command": "move", "scope": "selection", "args": ["left", "char"] },
      {"keys": ["down"],                "command": "move", "scope": "selection", "args": ["right", "line"] },
      {"keys": ["up"],                  "command": "move", "scope": "selection", "args": ["left", "line"] },

      {"keys": ["alt+right"],           "command": "move", "scope": "selection", "args": ["right", "word"] },
      {"keys": ["alt+left"],            "command": "move", "scope": "selection", "args": ["left", "word"] },
      {"keys": ["command+right"],       "command": "move", "scope": "selection", "args": ["right", "node"] },
      {"keys": ["command+left"],        "command": "move", "scope": "selection", "args": ["left", "node"] },
  
      {"keys": ["shift+right"],         "command": "expand", "scope": "selection", "args": ["right", "char"] },
      {"keys": ["shift+left"],          "command": "expand", "scope": "selection", "args": ["left", "char"] },
      {"keys": ["shift+down"],          "command": "expand", "scope": "selection", "args": ["right", "line"] },
      {"keys": ["shift+up"],            "command": "expand", "scope": "selection", "args": ["left", "line"] },

      {"keys": ["shift+alt+right"],     "command": "expand", "scope": "selection", "args": ["right", "word"] },
      {"keys": ["shift+alt+left"],      "command": "expand", "scope": "selection", "args": ["left", "word"] },
      {"keys": ["shift+command+right"], "command": "expand", "scope": "selection", "args": ["right", "node"] },
      {"keys": ["shift+command+left"],  "command": "expand", "scope": "selection", "args": ["left", "node"] },

      {"keys": ["command+z"],       "command": "undo" },
      {"keys": ["command+shift+z"], "command": "redo" }
    ]
  }

]
